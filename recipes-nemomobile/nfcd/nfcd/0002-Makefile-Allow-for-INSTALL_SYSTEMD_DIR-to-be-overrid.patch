diff --git a/src/Makefile b/src/Makefile
index 914f8c7..5cf6acb 100644
--- a/src/Makefile
+++ b/src/Makefile
@@ -204,7 +204,7 @@ INSTALL = install
 INSTALL_DIRS = $(INSTALL) -d
 
